@model crud.Models.Article

@using (Html.BeginForm(null, null, FormMethod.Get, new { @action = "/Article/Edit/" + Model.Id }))
{
    <button type="submit" class="btn btn-primary btn-sm px-3" data-toggle="modal">Editar</button>
    <!-- Button trigger modal 'Details' -->
    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal_details_@{@Model.Id}">Detalles</button>
    <!-- Button trigger modal 'Delete' -->
    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal_delete_@{@Model.Id}">Eliminar</button>
}

@Html.Partial("_Details", Model)
@Html.Partial("_Delete", Model)