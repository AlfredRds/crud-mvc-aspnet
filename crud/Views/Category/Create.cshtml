@model crud.Models.Category

@{
    ViewBag.Title = "Crear categoría";
}

<h3>@ViewBag.Title</h3>
<p>@ViewBag.Message</p>
<hr />
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-sm px-3">Guardar</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}